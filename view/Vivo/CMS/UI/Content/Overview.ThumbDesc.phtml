<div class="OverviewThumbDesc">
<? if(count($children)) : ?>
		<ul class="thumbnails">
		<? foreach($children as $child) : ?>
			<li class="span3">
				<a class="thumbnail" href="<?=$this->document($child)?>">
					<div class="row-fluid">
						<? if($child->getImage()) : ?>
						<img src="<?=$this->resource($child->getImage(), $child) ?>" alt="">
						<? endif; ?>
						<div class="span12 caption">
							<h3><?=htmlspecialchars($child->getOverviewTitleSafe());?></h3>
							<? if ($child->getDescription()): ?>
							<p><?= htmlspecialchars($child->getDescription()); ?></p>
							<? endif; ?>
						</div>
					</div>
				</a>
			</li>
		<? endforeach; ?>
		</ul>
	<? endif; ?>
</div>
